<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="card">
      <div class="card-content">
          <h4>Edit Your Comment:</h4>
          <form action="/comments/{{this.id}}?_method=put" method="post">
            <p>
              <label>Comment:</label>
              <input class="edit-input" type="text" value="{{this.userComment}}" name="userComment"/>
            </p>
            <div id="edit-action" class="card-action">
              <input class="waves-effect deep-orange accent-2 btn" type="submit" value="Update" />
            </div>
          </form>
          <form action="/comments/{{this.id}}?_method=delete" method="post">
            <input class="waves-effect deep-orange accent-2 btn" type="submit" value="Remove">
          </form>
      </div>
  </div>
</div>
